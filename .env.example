LOCAL_USER=your-user
LOCAL_GROUP=your-group
LOCAL_UID=1000
LOCAL_GID=1000
LOCAL_SUPP_GIDS=1000,27
LOCAL_SUPP_GROUPS=your-group,sudo
LOCAL_UMASK=0022
CONTAINER_HOME=/home/your-user
PROJECT_PATH=/home/your-user/projects/any-repo
CODEX_HOME_PATH=/home/your-user/.codex-docker-home/your-user
CODEX_CONFIG_FILE=/home/your-user/projects/codex/codex.config.toml
# Optional: use an already-built local base image; omit to let the launcher build one.
BASE_IMAGE=nvidia/cuda:12.2.2-cudnn8-devel-ubuntu22.04
# (Preferred) Use `./run_codex.sh --base /path/to/Dockerfile` instead of setting the following:
BASE_DOCKER_PATH=/home/your-user/projects/av/ci/x86_docker
# Advanced overrides mostly for backward compatibility:
BASE_DOCKER_CONTEXT=/home/your-user/projects/av/ci/x86_docker
BASE_DOCKERFILE=Dockerfile
BASE_IMAGE_TAG=
# Optional if using API key auth instead of device login
OPENAI_API_KEY=sk-your-key
